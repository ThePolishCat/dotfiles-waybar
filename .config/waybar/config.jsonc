// -*- mode: jsonc -*-
{
  // "layer": "top", // Waybar at top layer
  // "position": "bottom", // Waybar position (top|bottom|left|right)
  "height": 20, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": ["hyprland/window"],
  "modules-center": [
    "group/monitoring",
    "custom/media",
    "custom/applauncher",
    "hyprland/workspaces",
    "clock",
    "group/utils",
    "battery"
  ],
  "modules-right": ["tray", "group/audio", "backlight", "group/networking"],
  "hyprland/workspaces": {
    "format": "{icon}",
    "justify": "center",
    "on-scroll-up": "hyprctl dispatch workspace e-1",
    "on-scroll-down": "hyprctl dispatch workspace e+1",
    "persistent-workspaces": {
      "*": 10
    }
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },

  "group/utils": {
    "orientation": "horizontal",
    "modules": ["idle_inhibitor", "custom/screenshot-region"]
  },
  "group/audio": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "pulseaudio#microphone"]
  },
  "group/networking": {
    "orientation": "horizontal",
    "modules": ["network", "bluetooth"]
  },
  "group/monitoring": {
    "orientation": "horizontal",
    "modules": ["cpu", "memory", "temperature"]
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "rotate": 0,
    "format-icons": {
      "activated": "Û±ëÇ",
      "deactivated": "Û±ëé"
    },
    "tooltip-format": "Idle inhibitor"
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    "format": "{:%H:%M ÔëÑ  %A,  %m/%d}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "justify": "center"
  },
  "cpu": {
    "interval": 10,
    "format": "Û∞çõ {usage}%",
    "rotate": 0,
    "on-click": "kitty --hold -e btop"
  },
  "memory": {
    "format": "ÔÉâ  {}%"
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
  },
  "backlight": {
    //"device": "intel_backlight",
    "rotate": 0,
    "format": "{icon}  {percent}%",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ "],
    "on-scroll-up": "brightnessctl set 1%+",
    "on-scroll-down": "brightnessctl set 1%-",
    "tooltip-format": "Brightness: {percent}%",
    "min-length": 6,
    "scroll-step": 5
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": " {capacity}% {icon} ",
    "format-full": " {capacity}% {icon} ",
    "format-charging": " {capacity}% Ôóß",
    "format-plugged": " {capacity}% Ôá¶ ",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  },
  "network": {
    "tooltip": true,
    "format-wifi": "Û∞§® ",
    "rotate": 0,
    "format-ethernet": "Û∞àÄ ",
    "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>",
    "format-linked": "Û∞àÄ {ifname} (No IP)",
    "format-disconnected": "Û∞§≠ ",
    "tooltip-format-disconnected": "Disconnected",
    "format-alt": "<span foreground='#99ffdd'>ÔÄô  {bandwidthDownBytes}</span> <span foreground='#ffcc66'>ÔÇì  {bandwidthUpBytes}</span>",
    "interval": 2
  },
  "bluetooth": {
    "format": "Ôäî",
    "format-connected": "Û∞Ç± connected",
    "format-disabled": "Û∞Ç≤",
    "rotate": 0,
    "on-click": "blueman-manager",
    "tooltip-format": "{controller_alias}\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{icon} {device_battery_percentage}%"
  },
  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "rotate": 0,
    "format-muted": "Óª® ",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "ÔÄ• ",
      "headset": "ÔÄ• ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ ",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
    },
    "on-click": "pavucontrol"
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "rotate": 0,
    "format-source": "ÔÑ∞",
    "format-source-muted": "ÔÑ± ",
    "on-click": "pavucontrol -t 4"
  },
  "custom/media": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "custom/power": {
    "format": "‚èª ",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
    "menu-actions": {
      "shutdown": "shutdown",
      "reboot": "reboot",
      "suspend": "systemctl suspend",
      "hibernate": "systemctl hibernate"
    }
  },
  "custom/screenshot-region": {
    "format": "ÔÄ∞",
    "on-click": "$HOME/.config/hypr/scripts/screenshot-region.sh",
    "justify": "center",
    "tooltip-format": "Screenshot"
  },
  "custom/applauncher":{
    "format": "ÔÄï",
    "on-click":"$HOME/.config/hypr/scripts/run-wofi.sh"
  }
}
